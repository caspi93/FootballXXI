@{
    ViewBag.Title = "Inicio";
}

<div class="container h-100">
    <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
            <h1 class="text-uppercase text-white font-weight-bold">Bienvenido a su tienda Football XXI</h1>

        </div>
        @if (Session["empleado"] != null) {
            <img src="@Url.Content("~/Content/Images/Futball.jpg")" alt="...">
        }

            @if (Session["tipo"] == null) {
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 font-weight-light mb-5">¡Registrese para empezar a comprar!</p>
                    @{
                        var atributosBtnPrimary = new Dictionary<string, object> {
                                    {"class", "btn btn-primary btn-xl js-scroll-trigger" }
                        };
                    }
                    @Html.ActionLink("¡Registrarse!", "CrearCliente", "Home", null, atributosBtnPrimary)
                </div>
            }
        </div>
</div>


